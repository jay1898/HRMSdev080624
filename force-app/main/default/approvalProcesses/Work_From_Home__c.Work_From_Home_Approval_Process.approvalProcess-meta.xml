<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Employee__c</field>
        <field>Email__c</field>
        <field>Applied_WFH_Date__c</field>
        <field>Reason__c</field>
        <field>End_Date__c</field>
        <field>Number_of_Days__c</field>
        <field>Start_Date__c</field>
        <field>Work_From_Home_Type__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Approve_status</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Work_From_Home_Approve_Email_Alert</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>ahilgedam@hrms.com.dev</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Work From Home Approval Process</label>
        <name>Work_From_Home_Approval_Process</name>
        <rejectionActions>
            <action>
                <name>Update_Rejected_status</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Work_From_Home_Rejected_Email_Alert</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>unfiled$public/Request_for_Work_From_Home_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Work_From_Home__c.Reason__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Approve_status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Rejected_status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Request_for_Work_From_Home_Approval_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Work From Home Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
