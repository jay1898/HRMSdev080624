<apex:page controller="SendBulkEmailController">
    <apex:form style="font-family: Arial, sans-serif;">
        <apex:pageBlock title="Send Bulk Email" mode="edit">
            <apex:pageBlockButtons location="top">
                <apex:commandButton value="Select All" action="{!selectAll}" rerender="leadTable" styleClass="btn" style="margin-right: 10px;"/>
                <apex:commandButton value="Deselect All" action="{!deselectAll}" rerender="leadTable" styleClass="btn"/>
            </apex:pageBlockButtons>
            <apex:pageBlockTable value="{!leadWrappers}" var="leadWrapper" id="leadTable">
                <apex:column style="width: 5%;">
                    <apex:inputCheckbox value="{!leadWrapper.isSelected}" />
                </apex:column>
                <apex:column headerValue="Lead Name" style="width: 30%;">
                    <apex:outputText value="{!leadWrapper.lead.Name}" />
                </apex:column>
                <apex:column headerValue="Lead Email" style="width: 30%;"> 
                    <apex:outputText value="{!leadWrapper.lead.Email}" />
                </apex:column>
            </apex:pageBlockTable>

            <apex:pageBlockSection title="Email Details" collapsible="false" columns="1">
                <apex:outputLabel value="Subject" for="emailSubject" style="font-weight: bold;"/>
                <apex:inputText value="{!emailSubject}" id="emailSubject" styleClass="emailInput" style="width: 100%;"/>

                <apex:outputLabel value="Body" for="emailBody" style="font-weight: bold;"/>
                <apex:inputTextarea value="{!emailBody}" id="emailBody" styleClass="emailInput" richText="true" style="width: 100%; height: 100px;"/>
            </apex:pageBlockSection>

            <apex:commandButton value="Send Emails" action="{!sendEmails}" rerender="none" styleClass="btn" style="margin-top: 10px;"/>
        </apex:pageBlock>
    </apex:form>
    
    
</apex:page>